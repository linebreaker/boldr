{
  "name": "boldr-frontend",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.js",
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "scripts": {
    "dev": "NODE_ENV=development btools dev",
    "start": "npm run clean && cross-env NODE_ENV=development GRAPHQL_ENDPOINT=http://localhost:2121/api/v1/graphql node server/index.js",
    "start:prod": "npm run build && cross-env NODE_ENV=production node server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rimraf buildClient && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "clean": "rimraf build",
    "precommit": "lint-staged --verbose",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "format": "prettier --single-quote --jsx-bracket-same-line=false --trailing-comma=all --print-width=100 --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "dependencies": {
    "@boldr/ui": "0.1.0-rc.5",
    "apollo-client": "^1.9.0-1",
    "boldr-auth": "0.0.1-alpha.3",
    "boldr-core": "0.0.1-rc.4",
    "boldr-tools": "0.1.0-beta.2",
    "draft-convert": "^1.4.8",
    "draft-js": "^0.10.1",
    "draftjs-utils": "^0.8.4",
    "express": "^4.15.3",
    "graphql": "^0.10.5",
    "react": "^15.6.1",
    "react-apollo": "^1.4.8",
    "react-dom": "^15.6.1",
    "react-dropzone": "^3.13.3",
    "react-helmet": "^5.1.3",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "react-tagsinput": "^3.17.0",
    "react-transition-group": "^2.2.0",
    "react-universal-component": "latest",
    "redux": "^3.7.2",
    "redux-form": "^7.0.2",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "styled-components": "^2.1.1",
    "webpack-flush-chunks": "^1.1.10"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-boldr": "0.11.0",
    "babel-watch": "^2.0.7",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.3.0",
    "eslint-config-boldr": "^0.11.2",
    "flow-bin": "^0.51.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.6.1",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "react-hot-loader": "next",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --semi=false --write",
      "eslint --fix",
      "git add"
    ]
  }
}
