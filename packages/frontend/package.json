{
  "name": "boldr-frontend",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.js",
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "scripts": {
    "dev": "NODE_ENV=development btools dev",
    "start": "npm run clean && cross-env NODE_ENV=development GRAPHQL_ENDPOINT=http://localhost:2121/api/v1/graphql node server/index.js",
    "start:prod": "NODE_ENV=production boldr start:ssr",
    "build": "NODE_ENV=production btools build",
    "build:client": "NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "clean": "boldr clean",
    "precommit": "lint-staged --verbose",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "test": "NODE_ENV=test jest --config jest.config.json",
    "prettier": "node ./internal/scripts/prettier.js write"
  },
  "dependencies": {
    "@boldr/ui": "0.1.0-rc.5",
    "apollo-client": "^1.9.0-1",
    "boldr-auth": "0.0.1-alpha.1",
    "boldr-core": "0.0.1-alpha.2",
    "boldr-icons": "0.1.0-rc.1",
    "boldr-tools": "0.1.0-rc.6",
    "cli": "0.1.0-beta.5",
    "draft-convert": "^1.4.8",
    "draft-js": "^0.10.1",
    "draftjs-utils": "^0.8.4",
    "express": "^4.15.3",
    "graphql": "^0.10.5",
    "nodent-runtime": "^3.0.4",
    "react": "^15.6.1",
    "react-apollo": "^1.4.8",
    "react-dom": "^15.6.1",
    "react-dropzone": "^3.13.4",
    "react-helmet": "^5.1.3",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "react-tagsinput": "^3.17.0",
    "react-transition-group": "^2.2.0",
    "react-universal-component": "2.0.20",
    "redux": "^3.7.2",
    "redux-form": "^7.0.3",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "shortid": "^2.2.8",
    "styled-components": "^2.1.1",
    "webpack-flush-chunks": "^1.1.16"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-boldr": "0.11.10",
    "babel-watch": "^2.0.7",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.3.0",
    "eslint-config-boldr": "0.12.3",
    "flow-bin": "^0.51.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.6.1",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "sinon": "^2.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --semi=false --write",
      "eslint --fix",
      "git add"
    ]
  }
}
